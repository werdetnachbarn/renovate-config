{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "github>whitesource/merge-confidence:beta",
    ":prHourlyLimitNone",
    ":prConcurrentLimit10",
    ":timezone(Europe/Berlin)"
  ],
  "addLabels": [
    "Update"
  ],
  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "dependencyDashboard": true,
  "dependencyDashboardLabels": [
    "Update"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "platformAutomerge": true,
    "automerge": true,
    "extends": [
      "schedule:weekends"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "rollbackPrs": true
    },
    {
      "description": "Require dashboard approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "lockFileMaintenance"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Group prettier packages",
      "matchPackageNames": ["prettier"],
      "matchPackagePatterns": ["^@prettier\/", "^prettier-plugin-"],
      "groupName": "prettier packages"
    },
    {
      "description": "Group react packages",
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom",
        "react",
        "react-dom"
      ],
      "groupName": "react packages",
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@apollo/client"],
      "allowedVersions": "<3.6"
    },
    {
      "matchDatasources": ["packagist"],
      "matchPackageNames": ["nunomaduro/larastan"],
      "allowedVersions": "<2.1.12"
    }
  ],
  "platformAutomerge": true,
  "rollback": {
    "automerge": true
  },
  "separateMultipleMajor": true
}
