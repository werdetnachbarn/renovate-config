{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "github>whitesource/merge-confidence:beta",
    ":prHourlyLimitNone",
    ":prConcurrentLimit10",
    ":timezone(Europe/Berlin)",
    "group:definitelyTyped"
  ],
  "addLabels": [
    "Update"
  ],
  "assigneesFromCodeOwners": true,
  "assigneesSampleSize": 1,
  "dependencyDashboard": true,
  "dependencyDashboardLabels": [
    "Update"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekends"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "rollbackPrs": true
    },
    {
      "description": "Require dashboard approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest", "lockFileMaintenance"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Group prettier packages",
      "matchPackageNames": ["prettier"],
      "matchPackagePatterns": ["^@prettier\\/", "^prettier-plugin-"],
      "groupName": "prettier packages"
    },
    {
      "description": "Semantic-Release package Group",
      "matchPackageNames": ["semantic-release"],
      "matchPackagePatterns": [
        "^@semantic-release\\/",
        "semantic-release"
      ],
      "groupName": "semantic-release packages",
      "groupSlug": "semantic-release"
    }
  ],
  "rollback": {
    "automerge": true
  },
  "separateMultipleMajor": true
}
