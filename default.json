{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "mergeConfidence:all-badges",
    ":prHourlyLimitNone",
    ":prConcurrentLimit10",
    ":timezone(Europe/Berlin)"
  ],
  "addLabels": [
    "Update"
  ],
  "ignorePrAuthor": true,
  "assigneesSampleSize": 1,
  "dependencyDashboard": true,
  "configMigration": true,
  "dependencyDashboardLabels": [
    "Update"
  ],
  "postUpdateOptions": ["npmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "platformAutomerge": true,
    "automerge": true,
    "extends": [
      "schedule:weekends"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "npm"
      ],
      "rollbackPrs": true
    },
    {
      "description": "Require dashboard approval for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "lockFileMaintenance"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Make Meilisearch manual",
      "matchPackageNames": [
        "getmeili/meilisearch"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Group prettier packages",
      "matchPackageNames": [
        "prettier",
        "/^@prettier//",
        "/^prettier-plugin-/"
      ],
      "groupName": "prettier packages"
    },
    {
      "description": "Group react packages",
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom",
        "react",
        "react-dom",
        "@testing-library/react"
      ],
      "groupName": "react packages"
    },
    {
      "description": "Group playwright package and ci image",
      "matchPackageNames": [
        "registry.gitlab.com/werdetnachbarn/development/docker/playwright-ci",
        "/^@playwright//"
      ],
      "groupName": "playwright packages"
    },
    {
      "description": "Group nx-tools packages",
      "matchPackageNames": [
        "/^@nx-tools//"
      ],
      "groupName": "playwright packages"
    },
    {
      "extends": ["monorepo:storybook"],
      "dependencyDashboardApproval": true,
      "platformAutomerge": false,
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile$"
      ],
      "matchStrings": [
        "FROM (\\$CI_DEPENDENCY_PROXY(_DIRECT)?_GROUP_IMAGE_PREFIX|gitlab\\.com\\/.*\\/dependency_proxy\\/containers)\\/(?<depName>.*?):(?<currentValue>\\S*?)\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "platformAutomerge": true,
  "rollback": {
    "automerge": true
  },
  "separateMultipleMajor": true
}
