{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "github>whitesource/merge-confidence:beta",
    ":prHourlyLimitNone",
    ":prConcurrentLimit10"
  ],
  "addLabels": [
    "Update"
  ],
  "assigneesSampleSize": 1,
  "assignees": [
    "christian",
    "florian"
  ],
  "dependencyDashboardLabels": [
    "Update"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekends"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 3
    }
  ]
}
